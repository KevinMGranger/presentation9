#!/bin/rc

# adapted from Russ Cox's presentation script(s) of the same name(s)

filesuffix=.markdown

fn winname {
	cat /mnt/acme/$winid/tag | awk '{ print $1 }'
}

fn leadingnum {
	ssam -n '/[0-9]+/p'
}

fn nextnum {
	sed 's/$/ + 1/' | bc
}

next=`{basename `{winname} | leadingnum | nextnum}

presfiles=(*^$filesuffix)

Slide $presfiles($next)
